@model IEnumerable<EscapCarAutomotivo.Models.Venda>

@{
    ViewData["Title"] = "Buscar Vendas";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minData">Data Minima</label>
                    <input type="date" class="form-control" name="minData" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Maxima</label>
                    <input type="date" class="form-control" name="maxData" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total das Vendas = @Model.Sum(obj => obj.Resultado).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amortecedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bandeja)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KitAmortecedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Resultado)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amortecedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bandeja)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KitAmortecedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Resultado)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>